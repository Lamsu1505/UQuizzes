<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane prefHeight="630.0" prefWidth="883.0" styleClass="main-container" stylesheets="@../../../../Estilos/crearPregunta.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Controllers.Paneles.Docente.ContenedorGeneralOpcionesRespuesta">
    <children>
        <VBox alignment="CENTER" maxWidth="750.0" prefHeight="642.0" prefWidth="750.0" spacing="20.0" styleClass="content-box">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <HBox alignment="CENTER_RIGHT">
                   <children>
                       <Label fx:id="idPreguntaLabel" styleClass="id-label" text="idPregunta">
                           <font>
                               <Font size="14.0" />
                           </font>
                       </Label>
                   </children>
                </HBox>

                <VBox spacing="10.0">
   <children>
                       <Label styleClass="field-label" text="Enunciado">
                           <font>
                               <Font size="14.0" />
                           </font>
                       </Label>
                       <TextArea fx:id="enunciadoTextArea" prefHeight="100.0" styleClass="text-area" wrapText="true" />
   </children>
                </VBox>

                <HBox alignment="CENTER" spacing="20.0">
   <children>
                       <VBox prefHeight="62.0" prefWidth="104.0" spacing="10.0" HBox.hgrow="ALWAYS">
                          <children>
                              <Label styleClass="field-label" text="Tipo de pregunta" />
                              <ComboBox fx:id="tipoPreguntaComboBox" prefWidth="180.0" promptText="Seleccionar" styleClass="combo-box" />
                          </children>
                       </VBox>
   
                       <VBox alignment="CENTER" spacing="10.0" HBox.hgrow="ALWAYS">
      <children>
                              <Label fx:id="lblMateria" styleClass="field-label" text="Materia" />
      </children>
                       </VBox>
   
                       <VBox alignment="CENTER" spacing="10.0" HBox.hgrow="ALWAYS">
      <children>
                              <Label fx:id="lblUnidad" styleClass="field-label" text="Unidad" />
      </children>
                       </VBox>
   
                       <VBox alignment="CENTER" spacing="10.0" HBox.hgrow="ALWAYS">
      <children>
                              <Label fx:id="lblTema" styleClass="field-label" text="Tema" />
      </children>
                       </VBox>
   </children>
                </HBox>
            <StackPane prefHeight="221.0" prefWidth="710.0" style="-fx-background-color: grey;" />

                <HBox alignment="CENTER" spacing="20.0">
   <children>
                       <Button fx:id="cancelarButton" minWidth="120.0" mnemonicParsing="false" onAction="#cancelar" styleClass="cancel-button" text="Cancelar" />
                       <Button fx:id="siguienteButton" minWidth="120.0" mnemonicParsing="false" onAction="#crearPregunta" styleClass="next-button" text="Siguiente" />
   </children>
                </HBox>
            </children>
        </VBox>
    </children>
</StackPane>
