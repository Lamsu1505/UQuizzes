                        <ComboBox fx:id="temaComboBox" prefWidth="200.0" promptText="Seleccionar" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                        <Label fx:id="fechaInicioLabel" text="Fecha inicio" GridPane.rowIndex="2" />
                        <TextField fx:id="fechaInicioTextField" promptText="DD-MM-YYYY" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label fx:id="fechaFinLabel" text="Fecha fin" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                        <TextField fx:id="fechaFinTextField" promptText="YYYY-MM-DD HH:MM:SS" GridPane.columnIndex="3" GridPane.rowIndex="2" />

                        <Label fx:id="intentosLabel" text="Intentos permitidos" GridPane.rowIndex="3" />
                        <TextField fx:id="intentosTextField" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />

