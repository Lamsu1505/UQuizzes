<StackPane prefHeight="447.0" prefWidth="971.0" stylesheets="@../../../Estilos/crearPregunta.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Controllers.Paneles.Docente.CrearQuizController">
