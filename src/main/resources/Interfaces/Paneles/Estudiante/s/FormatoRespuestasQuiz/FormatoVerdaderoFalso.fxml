<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="verdaderoFalsoPanel" prefWidth="710.0" spacing="15.0" styleClass="pregunta-panel" stylesheets="@../../../../../Estilos/MultipleUnicaRespuesa.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Controllers.Paneles.Estudiante.FormatosRespuestas.FormatoVerdaderoFalsoController">
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>
    <children>
        <Label fx:id="lblEnunciado" styleClass="section-title" text="Seleccione la respuesta correcta:">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>

        <VBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <RadioButton fx:id="verdaderoRadioButton" mnemonicParsing="false" styleClass="radio-option" text="Verdadero">
                    <toggleGroup>
                        <ToggleGroup fx:id="respuestaToggleGroup" />
                    </toggleGroup>
                </RadioButton>
                <RadioButton fx:id="falsoRadioButton" mnemonicParsing="false" styleClass="radio-option" text="Falso" toggleGroup="$respuestaToggleGroup" />
            </children>
            <padding>
                <Insets left="20.0" />
            </padding>
        </VBox>

        <VBox spacing="10.0" />
      <Button fx:id="btnValidarRespuesta" mnemonicParsing="false" onAction="#registrarRespuesta" text="Validar" />
    </children>
</VBox>
